@inherits LayoutComponentBase

<div class="app-container">
    <!-- Header -->
    <header class="app-header">
        <div class="header-left">
            <!-- Replace with your actual logo -->
            <img src="images/democramap-logo.png" alt="DemocraMap Logo" class="app-logo" />
            <h1 class="app-title">DemocraMap</h1>
        </div>
    </header>

    <!-- Main Content -->
    <main class="app-main">
        <article class="content">
            @Body
        </article>
    </main>

    <!-- Footer -->
    <footer class="app-footer">
        <p>© @DateTime.Now.Year DemocraTeam – DemocraMap Prototype</p>
    </footer>
</div>

<!-- Error UI -->
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>